FROM apache/airflow:2.9.3-python3.11

USER root
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    && rm -rf /var/lib/apt/lists/*

USER airflow

# Install Airflow AWS providers (uses pip â€” this is Airflow's own ecosystem)
RUN pip install --no-cache-dir \
    apache-airflow-providers-amazon==8.19.0 \
    python-dateutil

# Install project dependencies from uv-exported lockfile.
# Generated by: uv export --no-dev --format requirements-txt > requirements.lock
# Pinned versions match your local uv.lock exactly, guaranteeing the Docker
# environment has the same dependency versions as your laptop.
COPY --chown=airflow:root ../requirements.lock /tmp/requirements.lock
RUN pip install --no-cache-dir -r /tmp/requirements.lock
